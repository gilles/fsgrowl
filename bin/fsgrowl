require "rubygems"
require "fsgrowl"
require "yaml"

conf_file = "#{ENV['HOME']}/.fsgrowl"
if File.exists?(conf_file)
  File.chmod(0600, conf_file)
else
  $stderr.puts "Can't find config file #{conf_file}'"
  exit(1)
end

conf = YAML.load_file(conf_file)

#TODO Daemonize
fsg = Fsgrowl::Fsgrowl.new(conf['username'], conf['password'])
while true
  fsg.check
  sleep(30)
end
